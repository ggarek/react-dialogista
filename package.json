{
  "name": "react-dialogista",
  "version": "0.12.0",
  "description": "Slim library for all your dialogs",
  "main": "lib/scripts/index.js",
  "scripts": {
    "lint": "eslint src/ *.js",
    "test": "tape -r babel-register ./src/**/__test__/*.test.js",
    "build:lib": "npm run clear:lib && babel src/lib --out-dir lib && mkdir lib/styles && cp -r src/lib/styles lib",
    "build:demo": "npm run clear:demo && webpack --config webpack.config.demo && cp src/demo/index.html demo/index.html && cp node_modules/react/dist/react.min.js demo && cp node_modules/react-dom/dist/react-dom.min.js demo/",
    "clear:demo": "rm -rf demo/**",
    "clear:lib": "rm -rf lib/**",
    "preversion": "npm run clear:lib && npm run lint && npm test",
    "version": "npm run build:lib",
    "postversion": "git push && git push --tags",
    "prepublish": "npm run clear:lib && npm test && npm run build:lib"
  },
  "keywords": [
    "react",
    "react-component",
    "dialog",
    "dialogs",
    "modal",
    "popup",
    "overlay"
  ],
  "author": "Igor Ovsiannikov <garek@mail.ru>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ggarek/react-dialogista.git"
  },
  "devDependencies": {
    "babel-cli": "^6.2.0",
    "babel-core": "^6.4.5",
    "babel-eslint": "^4.1.6",
    "babel-loader": "^6.2.1",
    "babel-plugin-transform-react-jsx": "^6.2.0",
    "babel-preset-es2015": "^6.1.18",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-1": "^6.1.18",
    "babel-register": "^6.14.0",
    "classnames": "^2.2.5",
    "css-loader": "^0.23.1",
    "eslint": "^1.10.1",
    "eslint-config-airbnb": "^1.0.0",
    "eslint-plugin-react": "^3.10.0",
    "express": "^4.13.4",
    "lodash": "https://registry.npmjs.org/lodash/-/lodash-4.15.0.tgz",
    "node-sass": "^3.4.2",
    "postcss-loader": "^0.8.0",
    "proxyquire": "^1.7.11",
    "react": "^15.3.1",
    "react-dom": "^15.3.1",
    "react-redux": "^4.4.2",
    "redux": "^3.4.0",
    "sass-loader": "^3.1.2",
    "sinon": "^1.17.3",
    "style-loader": "^0.13.0",
    "tape": "^4.4.0",
    "webpack": "^1.12.12",
    "webpack-dev-middleware": "^1.5.1",
    "webpack-hot-middleware": "^2.6.2"
  },
  "peerDependencies": {
    "react": "^15.0.1",
    "react-redux": "^4.4.2",
    "redux": "^3.4.0"
  }
}
